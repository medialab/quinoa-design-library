{
  "name": "quinoa-design-library",
  "version": "0.0.1",
  "description": "design library (components and styling themes) for quinoa components",
  "main": "dist/components/index.js",
  "author": "Robin de Mourat",
  "license": "ISC",
  "dependencies": {
    "bloomer": "^0.6.3",
    "bulma": "^0.7.0",
    "bulma-material-form": "^0.1.0",
    "font-awesome": "^4.7.0",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-dropzone": "^4.2.9",
    "react-tooltip": "^3.5.0"
  },
  "devDependencies": {
    "@robindemourat/eslint-config": "https://github.com/robindemourat/eslint-config",
    "@storybook/addon-actions": "^3.4.1",
    "@storybook/addon-links": "^3.4.1",
    "@storybook/addon-viewport": "^3.4.2",
    "@storybook/addons": "^3.4.1",
    "@storybook/react": "^3.4.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "css-loader": "^0.28.11",
    "eslint": "^4.3.0",
    "eslint-plugin-react": "^7.0.1",
    "file-loader": "^1.1.11",
    "fs-extra": "^5.0.0",
    "image-webpack-loader": "^4.2.0",
    "node-sass": "^4.8.3",
    "pre-commit": "^1.2.2",
    "sass-loader": "^7.0.1",
    "storybook-addon-jsx": "^5.3.0",
    "storybook-chrome-screenshot": "^1.1.0-alpha.1",
    "style-loader": "^0.20.3",
    "url-loader": "^1.0.1"
  },
  "scripts": {
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -c .storybook -o storybook",
    "screenshots": "storybook-chrome-screenshot -p 9001 -c .storybook",
    "lint": "eslint --fix src;eslint --fix stories",
    "build": "babel src/components --out-dir dist/components;node build-themes",
    "add-build": "git add dist",
    "add-storybook": "git add storybook"
  },
  "pre-commit": [
    "lint",
    "build",
    "build-storybook",
    "add-build",
    "add-storybook"
  ],
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "@robindemourat/eslint-config/es7",
      "@robindemourat/eslint-config/react"
    ],
    "rules": {
      "react/forbid-prop-types": 0,
      "react/jsx-no-bind": 0,
      "react/jsx-indent": 1,
      "react/no-set-state": 0,
      "react/prefer-stateless-function": 0
    }
  }
}
